<div style="margin: 100px auto; background-color: gray; width: 300px; height: 250px; text-align: center; padding-top: 30px">
  <h2>Sign in</h2>

  <form method="post" action="<%= callback_path + '?redirect_uri=' + request.params['redirect_uri'] %>" novalidate="noValidate">
    <div><label for="username">Username</label><br />
    <input name="username"></div>

    <div><label for="password">Password</label><br />
    <input type="password" name="password"></div>

    <div><input type="submit" value="Sign In"></div>
  </form>
</div>
